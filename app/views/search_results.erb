<% if @tweets %>
 
<h2> Search Tweet Display    </h2>

<h3> Source: 30-day Search with query: </h3> <%= query %>
    
<h3><% @tweets.count %> Tweets </h3>

<h2> Summaries </h2>

  <table>
    <thead>
      <tr>
        <th>Tweet Time</th>
        <th>Tweet ID</th>
        <th>Actor ID</th>
        <th>Actor</th>
        <th>Body</th>
      </tr>
    </thead>
    <tbody>
      <% @tweets.each do |tweet| %>
        <tr>
          <td><%= tweet["postedTime"] %></td>
          <td><%= tweet["id"].split(':')[-1] %></td>
          <td><%= tweet["actor"]["id"].split(':')[-1] %></td>
          <td><%= tweet["actor"]["preferredUsername"] %></td>
          <td><%= tweet["body"]%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
<% else %>
    <h3> No Tweets to display. </h3>
<% end %>

<h2> Details </h2>
<a href="/tweet_details">Click for details</a>
